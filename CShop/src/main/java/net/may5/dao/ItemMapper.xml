<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.may5.dao.ItemMapper">


	<select id="getItems" resultType="Item">
		select * from item where itemId=#{itemId}
	</select>

	<select id="getSizeInfo" resultType="SizeInfo">
		select * from sizeInfo where sizeCode=#{sizeCode}
	</select>

	<select id="getItemCount" resultType="int">
		select count(*) from item
	</select>
	
	<select id="getItemList" resultType="Item">
		select itemId, itemName from item
	</select>
	
	</mapper>